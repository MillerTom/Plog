{% extends 'base.jinja2' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-lg-4">
                <form method="post" action="{{ 'add_post'|route_url }}">
                    <input type="hidden" name="csrf_token" value="{{ token }}"/>
                    <label for="title" class="form-group">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                    <br>
                    <label for="body" class="form-group">Body</label>
                    <textarea id="body" name="body" class="form-control" rows="10" cols="80"></textarea>
                    <br>
                    <input type="submit" class="btn btn-success" value="Add Post"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}