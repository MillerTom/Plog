{% extends 'base.jinja2' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
            <h3 class="col-lg-3">Posts</h3>
            <a href="{{ 'add_post'|route_url }}" class="btn btn-success pull-right" style="margin-top: 14px">Add New Post</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>
                                <a href="/{{ post.slug }}">{{ post.title }}</a>
                                <a class="btn btn-danger btn-sm pull-right" href="{{ 'delete_post'|route_url(slug=post.slug) }}">Delete</a>
                                <a class="btn btn-primary btn-sm pull-right" href="{{ 'edit_post'|route_url(slug=post.slug) }}" style="margin-right: 3px;">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <h3 class="col-lg-3">Users</h3>
                <a href="{{ 'add_user'|route_url }}" class="btn btn-primary pull-right" style="margin-top: 14px">New User</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Group</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                {{ user.username }}
                            </td>
                            <td>
                                {% for group in user.group %}
                                    {{ group.name }}
                                {% endfor %}
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm pull-right" href="{{ 'edit_user'|route_url(username=user.username) }}" style="margin-right: 3px;">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <h3 class="col-lg-3">Groups</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>
                                {{ group.name }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <form class="form-inline" method="post" action="{{ 'admin'|route_url }}">
                    <div class="form-group">
                        <input type="text" class="form-control" id="group_name" name="group_name" placeholder="Enter a name">
                        <button type="submit" class="btn btn-primary">Add Group</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}