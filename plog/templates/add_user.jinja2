{% extends 'base.jinja2' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-lg-4">
                <form method="post" action="{{ 'add_user'|route_url }}">
                    <input type="hidden" name="csrf_token" value="{{ token }}"/>
                    <label for="username" class="form-group">Username:</label>
                    <input type="text" class="form-control" id="username" name="username"/>
                    <br>
                    <label for="password" class="form-group">Password:</label>
                    <input type="password" class="form-control" id="password" name="password"/>
                    <br>
                    <label for="email" class="form-group">E-mail:</label>
                    <input type="email" class="form-control" id="email" name="email"/>
                    <br>
                    <label for="group_name" class="form-group">Group:</label>
                    <select class="form-control" id="group_name" name="group_name">
                    {% for group in groups %}
                        <option>{{ group.name }}</option>
                    {% endfor %}
                    </select>
                    <hr>
                    <input type="submit" class="btn btn-success" value="Add User"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}